{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "noLib": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "jsx": "preserve",
    "noEmit": true,
    "baseUrl": ".",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "lib": ["ESNext", "DOM"],
    "noImplicitAny": false,
    "skipLibCheck": true,
    "types": ["element-plus/global", "vite/client"],
    "removeComments": true,
    "paths": {
      "/@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "tests/server/**/*.ts", "dist", "**/*.js"],
  // "files": ["package.json"],
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "typings",
    "typings/**/*.d.ts",
    "typings/**/*.ts",
    "build",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "mock",
    "mock/**/*.ts",
    "vite.config.ts"
  ]
}
